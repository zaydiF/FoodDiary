<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#f5f5f5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Мой профиль"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <!-- Имя -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Имя"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите ваше имя"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:background="@drawable/edittext_background"/>

        <!-- Возраст -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Возраст (лет)"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/etAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="25"
            android:inputType="number"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:background="@drawable/edittext_background"/>

        <!-- Рост -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Рост (см)"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/etHeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="175"
            android:inputType="number"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:background="@drawable/edittext_background"/>

        <!-- Вес -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Вес (кг)"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/etWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="70"
            android:inputType="numberDecimal"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:background="@drawable/edittext_background"/>

        <!-- Цель -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Цель"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"/>
        <Spinner
            android:id="@+id/spinnerGoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:background="@drawable/edittext_background"/>

        <!-- Активность -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Уровень активности"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"/>
        <Spinner
            android:id="@+id/spinnerActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:padding="12dp"
            android:background="@drawable/edittext_background"/>

        <!-- Кнопка сохранения -->
        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Сохранить профиль"
            android:textSize="16sp"
            android:background="#10B981"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="24dp"/>

        <!-- Результат -->
        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Заполните данные для расчета нормы калорий"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp"
            android:padding="16dp"
            android:background="@drawable/card_background"
            android:gravity="center"/>

    </LinearLayout>
</ScrollView>